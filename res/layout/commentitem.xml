<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="3px"
    android:paddingRight="3px">
	<RelativeLayout
          android:layout_width="fill_parent" 
          android:layout_height="wrap_content">
	    <TextView
	        android:id="@+id/commentRowLabelAuthor"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="12sp"
	        android:textColor="#6a6a6a"
	        android:text="Author: Anonymous"
	        />
	    <TextView
	        android:id="@+id/commentRowLabelDate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="12sp"
	        android:textColor="#6a6a6a"
	        android:layout_alignParentRight="true"
            android:layout_marginRight="6px"
            android:text="Date: 24.12.12"
	    />
	</RelativeLayout>
	    <TextView
        android:id="@+id/commentRowLabelBody"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ac nulla sed turpis molestie elementum. Mauris fermentum vulputate diam quis pretium."
        android:paddingLeft="2px"
    	/>
</LinearLayout>
